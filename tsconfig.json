{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@atoms": ["src/features/atoms"],
      "@atoms/*": ["src/features/atoms/*"],
      "@molecules": ["src/features/molecules"],
      "@molecules/*": ["src/features/molecules/*"],
      "@organisms": ["src/features/organisms"],
      "@organisms/*": ["src/features/organisms/*"],
      "@pages": ["src/features/pages"],
      "@pages/*": ["src/features/pages/*"],
      "@templates": ["src/features/templates"],
      "@templates/*": ["src/features/templates/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@util": ["src/util"],
      "@util/*": ["src/util/*"]
    }
  },
  "include": ["vite.config.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
